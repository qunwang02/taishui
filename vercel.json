{
  "functions": {
    "api/*.js": {
      "maxDuration": 10
    }
  },
  "routes": [
    {
      "src": "^/api/(.*)",
      "dest": "/api/$1.js",
      "methods": ["GET", "POST", "OPTIONS"]
    },
    {
      "src": "^/$",
      "dest": "/index.html",
      "headers": {
        "Content-Type": "text/html"
      }
    },
    {
      "src": "^/admin$",
      "dest": "/admin.html",
      "headers": {
        "Content-Type": "text/html"
      }
    },
    {
      "src": "^/(.*\\.html)$",
      "dest": "/$1"
    },
    {
      "src": "^/(.*)$",
      "dest": "/index.html",
      "status": 200
    }
  ]
}
